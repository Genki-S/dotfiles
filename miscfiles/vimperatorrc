let mapleader = ","

" Proxy mappings
nnoremap pd :proxy direct<CR>:echo "No proxy"<CR>
nnoremap pw :proxy pac -reload file:///home/genki/waseda.pac<CR>:echo "Waseda proxy"<CR>

" Mode Changing
nnoremap v cv
vnoremap <Esc> <Esc><Esc>

" For US Keyboard
nnoremap ; :
nnoremap : ;

" Tabs
nnoremap <C-h> :tabmove! -1<CR>
nnoremap <C-l> :tabmove! +1<CR>

" Turn css on/off
nnoremap ! :set invum<CR>

cnoremap <C-p> <Up>
cnoremap <C-n> <Down>

" Search selected text
vnoremap P y<Esc><Esc>P

set complete=tsl
set focuscontent


" Plugins
let g:plugin_loader_roots = "~/dotfiles/submodules/vimperator-plugins"
let g:plugin_loader_plugins = "_libly,auto_source,appendAnchor,lookupDictionary,pluginManager,twittperator"

" Twittperator
let g:twittperator_use_ssl_connection_for_api_ep = 1
cabbrev -javascript %% " -- " + buffer.title + " " + buffer.URL

nnoremap <Leader>,e :eijiro 
vnoremap E y:eijiro <M-v><CR>
nmap <Leader>e chbveE

" vim: set ft=vim:
