#!/bin/sh

osascript <<END
	tell application "iTerm"
		activate
		set myterm to (make new terminal)
		tell myterm
			set number of columns to 160
			set number of rows to 50
			set mysession to (make new session at the end of sessions)
			tell mysession
				exec command "/usr/local/bin/vim $@"
			end tell
		end tell
	end tell
END
