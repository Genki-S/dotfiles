# ==================================================
# Platform check
# ==================================================
case $OSTYPE in
	darwin*)
		PLATFORM='mac'
		;;
	linux*)
		PLATFORM='linux'
		;;
	*)
		PLATFORM='unknown'
		;;
esac

# ==================================================
# My zshenv
# ==================================================
# Load all config files
envfiles=(
	env.zsh
	ruby.zsh
)
for f in $envfiles
do
	source $HOME/dotfiles/zshfiles/envfiles/$f
done
